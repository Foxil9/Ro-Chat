{
  "name": "rochat",
  "version": "1.0.0",
  "description": "RoChat - A New Way of Communication",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --development",
    "build": "electron-builder",
    "server": "node server/index.js",
    "dev:server": "nodemon server/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "roblox",
    "chat",
    "electron",
    "desktop"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.0.2",
    "prettier": "^3.8.1",
    "shadcn": "^3.8.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "axios": "^1.6.5",
    "chokidar": "^3.6.0",
    "dotenv": "^16.3.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "express": "^4.18.2",
    "lru-cache": "^10.0.0",
    "mongodb": "^7.0.0",
    "mongoose": "^8.0.3",
    "obscenity": "^0.4.6",
    "socket.io": "^4.6.0",
    "socket.io-client": "^4.6.0",
    "winston": "^3.11.0"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ]
  },
  "build": {
    "appId": "com.rochat.app",
    "productName": "RoChat",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "server/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "asar": true
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  }
}
